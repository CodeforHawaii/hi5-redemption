extends layout

block content
    div#searchView(data-role='page')
        div#about-popup(data-role='popup', data-theme="a", data-tolerance="0,0")
            a(data-rel="back", data-role="button", data-theme="a", data-icon="delete", data-iconpos="notext", class="ui-btn-right") Close
            p Created by <a href="http://twitter.com/keokilee">@keokilee</a>. This app is built on
              <a href="http://backbonejs.org">Backbone.js</a>, <a href="http://nodejs.org">Node.js</a>,
              <a href="http://jquerymobile.com">jQuery Mobile</a>, <a href="http://mongodb.org">MongoDB</a>, and
              <a href="http://coffeescript.org">Coffeescript</a>.

            p The source code is available on <a href="http://github.com/keokilee/hi5-redemption/">Github</a>.
            div.fb-like(data-href="http://www.redeemhi5.com", data-send="false", data-width="320", data-show-faces="false", colorscheme="dark")

        div(data-role="header", data-theme='b')
            a#about(class="ui-btn-left", data-transition) About
            h1 Search
            a#location-button(class="ui-btn-right") Current Location

        div(data-role="content")
            ul(data-role="listview")
                li
                    input(type="search")

            ul#resultView(data-role="listview")

            div#welcome
                h3 Find HI-5 Recycling Locations
                h4 Start by typing in an address or by using your current location.

    div#locationView(data-role='page', data-add-back-btn="true")
        div(data-role="header", data-theme="b")
            h1 Loading

        div(data-role="content")
            div#map(style="width:320px; height:320px")
            div#details
