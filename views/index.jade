extends layout

block content
    div#searchView(data-role='page')
        div#about-popup(data-role='popup', data-theme="a", data-tolerance="0,0")
            include about

        div(data-role="header", data-theme='b')
            a#about(class="ui-btn-left") About
            h1 Search
            a#location-button(class="ui-btn-right")
                img(src="/images/map-marker.png")

        div(data-role="content")
            ul(data-role="listview")
                li
                    input(type="search")

            ul#resultView(data-role="listview")

            div#welcome
                h3 Find HI-5 Recycling Locations
                h4 Start by typing in an address or by using your current location.

    div#locationView(data-role='page', data-add-back-btn="true")
        div(data-role="header", data-theme="b")
            h1 Loading

        div(data-role="content")
            div#map
            div#details
